@model RapModel.Output.ThongTinRap
@{
    ViewData["Title"] = "Cập nhật thông tin rạp chiếu phim";
    var dsNhanVien = (List<NhanVienModel.Output.ThongTinNhanVien>)ViewData["DSNhanVien"];
}

<style>
    div#dialog-message p {
        margin: 0;
    }

    .slide-info {
        border: 1px solid;
        box-shadow: 5px 6px #888888;
        padding: 20px;
        margin-top: 10%;
    }

        .slide-info .page-heading {
            margin-top: 15px;
        }
</style>
<div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
    <div class="slide-info">
        <h2 class="page-heading">Cập nhật thông tin rạp chiếu phim</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="TenRap" class="col-sm-5 col-md-3 control-label"></label>
                <div class="col-sm-7 col-md-9">
                    <input asp-for="TenRap" class="form-control" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="col-sm-5 col-md-3"></label>
                <div class="col-sm-7 col-md-9">
                    <input asp-for="DiaChi" class="form-control" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label asp-for="DienThoai" class="col-sm-5 col-md-3 control-label"></label>
                <div class="col-sm-7 col-md-9">
                    <input asp-for="DienThoai" class="form-control" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-sm-5 col-md-3 control-label"></label>
                <div class="col-sm-7 col-md-9">
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label asp-for="NguoiQuanLyId" class="col-sm-5 col-md-3"></label>
                <div class="col-sm-7 col-md-9">
                    <select name="NguoiQuanLyId" class="form-control">
                        <option value="0">Chọn người quản lý</option>
                        @foreach (var nv in dsNhanVien)
                        {
                            if (nv.Id == Model.NguoiQuanLyId)
                            {
                                <option value="@nv.Id" selected>@nv.HoTen</option>
                            }
                            else
                            {
                                <option value="@nv.Id">@nv.HoTen</option>
                            }

                        }
                    </select>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label asp-for="ViDo" class="col-sm-5 col-md-3 control-label"></label>
                <div class="col-sm-7 col-md-9">
                    <input asp-for="ViDo" class="form-control" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label asp-for="KinhDo" class="col-sm-5 col-md-3 control-label"></label>
                <div class="col-sm-7 col-md-9">
                    <input asp-for="KinhDo" class="form-control" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i> Lưu thông tin</button>
                <a asp-area="Manage" asp-controller="Rap" asp-action="Index" class="btn btn-info"><i class="fa fa-arrow-circle-o-left"></i> Quay lại</a>
            </div>
            <div asp-validation-summary="All" class="col-sm-offset-5 col-sm-7 col-md-offset-3 col-md-9 text-danger font-weight-bold"></div>
            <div class="clearfix"></div>
        </form>
    </div>

</div>
@if (ViewData["ThongBao"] != null)
{
    <div id="dialog-message" title="Thông báo">
        <div style="margin: 10px 0;">
            @Html.Raw(ViewData["ThongBao"].ToString())
        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#dialog-message").dialog({
            modal: true,
            buttons: {
                Ok: function () {
                    $(this).dialog("close");
                }
            }
        });
    });

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


