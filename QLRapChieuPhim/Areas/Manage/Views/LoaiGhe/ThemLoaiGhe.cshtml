@model LoaiGheModel.Output.ThongTinLoaiGhe
@{
    ViewData["Title"] = "Thêm loại ghế mới";
}

<style>
    div#dialog-message p {
        margin: 0;
    }

    .slide-info {
        border: 1px solid;
        box-shadow: 5px 6px #888888;
        padding: 20px;
        margin-top: 10%;
    }

        .slide-info .page-heading {
            margin-top: 15px;
        }
</style>
<div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
    <div class="slide-info">
        <h2 class="page-heading">Thêm Loại ghế mới</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="TenLoaiGhe" class="col-sm-5 col-md-3 control-label"></label>
                <div class="col-sm-7 col-md-9">
                    <input asp-for="TenLoaiGhe" class="form-control" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label asp-for="GiaVe" class="col-sm-5 col-md-3 control-label"></label>
                <div class="col-sm-7 col-md-9">
                    <input asp-for="GiaVe" class="form-control" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i> Lưu thông tin</button>
                <a asp-area="Manage" asp-controller="LoaiGhe" asp-action="Index" class="btn btn-info"><i class="fa fa-arrow-circle-o-left"></i> Quay lại</a>
            </div>
            <div asp-validation-summary="All" class="col-sm-offset-5 col-sm-7 col-md-offset-3 col-md-9 text-danger font-weight-bold"></div>
            <div class="clearfix"></div>
        </form>
    </div>

</div>
@if (ViewData["ThongBao"] != null)
{
    <div id="dialog-message" title="Thông báo">
        <div style="margin: 10px 0;">
            @Html.Raw(ViewData["ThongBao"].ToString())
        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#dialog-message").dialog({
            modal: true,
            buttons: {
                Ok: function () {
                    $(this).dialog("close");
                }
            }
        });
    });

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


