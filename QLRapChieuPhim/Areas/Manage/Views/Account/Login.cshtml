@model LoginModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
<style>
    .login-form {
        margin-top: 15%;
        border: 1px solid #888;
        padding: 10px;
        box-shadow: 2px 2px #888;
    }
        .login-form .login-title {
            font-size: 18px;
            font-weight: bold;
            color: #666;
            border-bottom: 1px solid #888;
            padding: 0 5px 5px;
        }
</style>

<div class="col-sm-6 col-sm-offset-3 login-form">
    <p class="login-title">Đăng nhập hệ thống</p>
    <div class="col-sm-6 hidden-xs">
        <img src="/images/csc-cinema-logo.png" class="img-responsive" />
    </div>
    <div class="col-sm-6 col-xs-12">
        <form asp-area="Manage" asp-controller="Account" asp-action="DangNhap" method="post">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Remember"><input asp-for="Remember" style="appearance: auto;" /> Ghi nhớ đăng nhập.</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Đăng nhập" class="btn btn-success" />
                <input type="hidden" name="returnurl" value="@ViewData["ReturnUrl"]" />
            </div>
        </form>
    </div>
    <div class="clearfix"></div>
</div>
    


