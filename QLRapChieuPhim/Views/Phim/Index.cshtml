
@{
    //ViewData["Title"] = "Index";
}
<style>
    .category-products {
        float: left;
        width: 100%;
    }

    ul.products-grid {
        float: left;
        width: 100%;
        border-bottom: 2px solid #241d1e;
        margin-bottom: 40px;
    }

    .products-grid > li {
        float: left;
        position: relative;
        margin-bottom: 20px;
    }

    .products-grid .product-info {
        position: relative;
        padding-bottom: 95px;
    }

    .products-grid li .product-info {
        width: 100%;
        max-height: none;
        height: 137px;
        min-height: 52px;
    }

    .list-movies > li {
        text-align: left;
    }

        .list-movies > li.item {
            margin-right: 25px;
            width: 197px;
        }

    .film-lists .nmovie-rating {
        position: absolute;
        z-index: 20;
        width: 45px;
        height: 30px;
        top: 5px;
        left: 5px;
        font-size: 0px;
        background: url(../images/bg-movie-rating.png) no-repeat scroll top left transparent;
        border: 1px solid #fff;
    }

        .film-lists .nmovie-rating.nmovie-rating-no {
            background: none;
        }

        .film-lists .nmovie-rating.nmovie-rating-p {
            background-position: -3px -2px;
        }

        .film-lists .nmovie-rating.nmovie-rating-c18 {
            background-position: -144px -2px;
        }

        .film-lists .nmovie-rating.nmovie-rating-c16 {
            background-position: -97px -2px;
        }

        .film-lists .nmovie-rating.nmovie-rating-c13 {
            background-position: -50px -2px;
        }

    .products-grid .product-name, .products-list .product-name {
        text-transform: uppercase;
        margin: 5px 0 8px;
        font-size: 14px;
        font-family: "Helvetica Neue", Verdana, Arial, sans-serif;
    }

    .category-products .products-grid .product-name a {
        color: #333 !important;
        font-size: 15px;
        font-weight: bold;
        text-transform: none;
    }

    .info-bold {
        font-weight: bold;
        font-size: 14px;
    }

    .info-normal {
        font-size: 15px;
    }

    .btn-booking {
        background: none no-repeat scroll 0 0 #e71a0f;
        border-radius: 5px;
        display: inline-block;
        padding: 6px 2px;
        border: 0;
        color: #ffffff;
        font-size: 13px;
        font-weight: normal;
        font-family: "Helvetica Neue", Verdana, Arial, sans-serif;
        line-height: 19px;
        text-align: center;
        text-transform: uppercase;
        vertical-align: middle;
        white-space: nowrap;
    }

        .btn-booking:hover {
            color: #ffff00;
        }

        .btn-booking > span.booking-icon {
            padding-left: 26px;
            background: url(../images/bg-cate-booking.png) no-repeat scroll left center rgba(0, 0, 0, 0);
            border-radius: 5px;
        }

        .btn-booking > span {
            border: 1px solid #f07469;
            font-weight: bold;
            padding: 5px;
        }

    ul.add-to-links > li {
        text-align: center;
    }
    .tab-movies {
        margin-top: 40px;
    }
    .tab-movies .nav-movie-tabs {
        border-bottom: 1px solid #ddd;
        width: 100%;
        margin-bottom: 25px;
    }
        .tab-movies .nav-movie-tabs li {
            margin-right: 30px;
        }
            .tab-movies .nav-movie-tabs li > a {
                border: none;
                color: #a0a3a7;
                text-transform: uppercase;
                font-size: 18px;
                font-weight: 400;
                padding: 10px 0;
            }
            .tab-movies .nav-movie-tabs li > a {
                border: none;
                color: #a0a3a7;
                text-transform: uppercase;
                font-size: 18px;
                font-weight: 400;
                padding: 10px 0;
            }
                .tab-movies .nav-movie-tabs li > a:after {
                    content: "";
                    background: #f26b38;
                    height: 2px;
                    position: absolute;
                    width: 100%;
                    left: 0;
                    bottom: -1px;
                    transition: all 250ms ease 0s;
                    transform: scale(0);
                }
            .tab-movies .nav-movie-tabs li.active > a {
                border-width: 0;
                border: none;
                color: #43464b !important;
                background: transparent;
            }
            .tab-movies .nav-movie-tabs li > a:after {
                content: "";
                background: #f26b38;
                height: 2px;
                position: absolute;
                width: 100%;
                left: 0;
                bottom: -1px;
                transition: all 250ms ease 0s;
                transform: scale(0);
            }
            .tab-movies .nav-movie-tabs li.active > a:after, .tab-movies .nav-movie-tabs li:hover > a:after {
                transform: scale(1);
            }
            .tab-movies .nav-movie-tabs li:hover > a {
                color: #43464b !important;
                background: transparent;
            }
                
</style>
<section class="container-fluid">
    <div class="clearfix"></div>    
    <div class="row tab-movies">
        <ul class="nav nav-movie-tabs">
            <li class="active"><a href="#">Phim đang chiếu</a></li>
            <li><a href="#">Phim sắp chiếu</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="category-products">
            <ul class="products-grid list-movies">
                <li class="film-lists item last">
                    <span class="nmovie-rating nmovie-rating-p">P</span>
                    <div class="product-images">
                        <a href="/ThongTinPhim?phimid=0" title="Tên phim" class="product-image">
                            <img src="~/images/movie/movie-sample.jpg" alt="Tên phim">
                        </a>
                    </div>
                    <div class="product-info">
                        <h2 class="product-name">
                            <a href="/ThongTinPhim?phimid=0" title="Tên phim">Tên phim</a>
                        </h2>
                        <div class="movie-info">
                            <span class="info-bold">Thể loại: </span>
                            <span class="info-normal"> Hành động, Tâm lý</span>
                        </div>
                        <div class="movie-info">
                            <span class="info-bold">Thời lượng: </span>
                            <span class="info-normal">12 phút</span>
                        </div>
                        <div class="movie-info">
                            <span class="info-bold">Khởi chiếu: </span>
                            <span class="info-normal">12/03/2021</span>
                        </div>
                    </div>
                    <ul class="add-to-links">
                        <li>
                            <button type="button" title="Mua vé" class="button btn-booking">
                                <span class="booking-icon"><span>Mua vé</span></span>
                            </button>
                        </li>
                    </ul>
                </li>                
            </ul>
        </div>
    </div>
</section>

